<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:baselineAligned="false"
        android:background="@drawable/overlay_desktop_options"
        tools:ignore="UseCompoundDrawables">

        <LinearLayout
            android:id="@+id/layout_option_widget"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"

            android:orientation="vertical"
            android:padding="20dp"
            tools:ignore="UseCompoundDrawables">

            <ImageView
                android:id="@+id/image_option_widget"
                android:layout_width="wrap_content"
                android:layout_height="40dp"

                android:src="@drawable/ic_widget_white"
                android:contentDescription="@string/desc_key__image_icon" />

            <TextView
                android:id="@+id/text_option_widget"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"

                android:text="@string/widget"
                android:textColor="@color/white" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/layout_option_wallpaper"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"

            android:orientation="vertical"
            android:padding="20dp"
            tools:ignore="UseCompoundDrawables">

            <ImageView
                android:id="@+id/image_option_wallpaper"
                android:layout_width="wrap_content"
                android:layout_height="40dp"

                android:src="@drawable/ic_wallpaper_white"
                android:contentDescription="@string/desc_key__image_icon" />

            <TextView
                android:id="@+id/text_option_wallpaper"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"

                android:text="@string/wallpaper"
                android:textColor="@color/white" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/layout_option_settings"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"

            android:orientation="vertical"
            android:padding="20dp"
            tools:ignore="UseCompoundDrawables">

            <ImageView
                android:id="@+id/image_option_settings"
                android:layout_width="wrap_content"
                android:layout_height="40dp"

                android:src="@drawable/ic_settings_white"
                android:contentDescription="@string/desc_key__image_icon" />

            <TextView
                android:id="@+id/text_option_settings"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"

                android:text="@string/pref_title__settings"
                android:textColor="@color/white" />
        </LinearLayout>

    </LinearLayout>



</androidx.constraintlayout.widget.ConstraintLayout>