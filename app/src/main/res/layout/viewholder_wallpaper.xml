<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"

    android:background="#40000000"
    android:foregroundGravity="center">

    <ImageView
        android:id="@+id/image_label_wallpaper"
        android:layout_width="45dp"
        android:layout_height="45dp"

        android:src="@drawable/ic_wallpaper_white"
        app:layout_constraintBottom_toBottomOf="@id/text_bmp_pick_image"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:contentDescription="@string/desc_key__image_icon" />

    <TextView
        android:id="@+id/text_bmp_pick_image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_marginTop="5dp"
        android:text="@string/wallpaper_pick_image"
        android:textColor="@color/white"
        android:visibility="gone"

        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/image_label_wallpaper" />

</androidx.constraintlayout.widget.ConstraintLayout>