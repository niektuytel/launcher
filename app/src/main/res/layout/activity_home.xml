<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/root"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.home.HomeActivity"
    android:background="#00000000">

    <com.pukkol.launcher.ui.home.HomeTouchView
        android:id="@+id/item_option_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <FrameLayout
            android:id="@+id/fragment_container"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

        <FrameLayout
            android:id="@+id/container"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

        <View
            android:id="@+id/view_dragField_left"
            android:layout_width="25dp"
            android:layout_height="0dp"
            android:alpha="0"
            android:background="@drawable/drag_field_left_white"
            android:translationX="-6dp"

            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <View
            android:id="@+id/view_dragField_right"
            android:layout_width="25dp"
            android:layout_height="0dp"
            android:alpha="0"
            android:background="@drawable/drag_field_right_white"
            android:translationX="6dp"

            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    </com.pukkol.launcher.ui.home.HomeTouchView>


</androidx.constraintlayout.widget.ConstraintLayout>