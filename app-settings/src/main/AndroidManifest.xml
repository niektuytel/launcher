<?xml version="1.0" encoding="utf-8"?>

<manifest
    xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.pukkol.app_settings">

    <uses-permission android:name="android.permission.QUERY_ALL_PACKAGES"/>

    <application android:screenOrientation="portrait">
        <activity
            android:name=".SettingsActivity"
            android:theme="@style/AppThemeSettings"
            android:label="Settings"
            android:icon="@mipmap/ic_settings"
            android:roundIcon="@mipmap/ic_settings_round">

            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".RemoveAppsActivity"
            android:theme="@style/AppThemeSettings"/>
    </application>
</manifest>